<!DOCTYPE html>
<html>
<head>
  <title>Spaceapps</title>
  <!-- CSS -->
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Economica:400,700", media: "all", "data-turbolinks-track" => true %>
  <!-- JS -->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!-- META -->
  <%= csrf_meta_tags %>
</head>
<body>

<!-- HEADER -->
<header class="header">
	<div class="container">

		<h1 class="logo"><i class="fa fa-rocket">&nbsp;</i>Astrodeo!</h1>

		<% if current_user %>
		<div class="nav-user">
			Logged In
		</div>
		<% else %>
		<div class="nav-public">
			<label for="modal-1" class="link js-btn">Log in</label>
			<label for="modal-2" class="link link-o js-btn">Sign Up</label>
		</div>
		<% end %>

	</div>
</header>

<%= yield %>

<div class="modal">
	<input class="modal-state" id="modal-1" type="checkbox" />
	<div class="modal-window">
		<div class="modal-inner">
			<label class="modal-close" for="modal-1"></label>
			<h1>LOG IN</h1>
		</div>
	</div>
</div>

<div class="modal">
	<input class="modal-state" id="modal-2" type="checkbox" />
	<div class="modal-window">
		<div class="modal-inner">
			<label class="modal-close" for="modal-2"></label>
			<a href="/auth/twitter" class="btn-social btn-twitter"><i class="fa fa-twitter"></i> Sign up with Twitter</a>
			<a href="/auth/google" class="btn-social btn-google"><li class="fa fa-google-plus"></li> Sign up with Google</a>
		</div>
	</div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    $('.modal').find('.js-btn').on('click', function() {
      $(document.body).addClass('modal-open');
    });

    $('.modal-close').on('click', function() {
      $(document.body).removeClass('modal-open');
    })

    $('.modal-bg').on('click', function() {
      $(document.body).removeClass('modal-open');
    })
  })
</script>

</body>
</html>
